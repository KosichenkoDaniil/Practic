@model Practic.Models.Application

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>
<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Краткое описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Валюта
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Currency.NameofCurrency)
        </dd>
        <dt class = "col-sm-2">
            Материал
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fabric.Name)
        </dd>
        <dt class = "col-sm-2">
            Фирма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firm.NameofFirm)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
